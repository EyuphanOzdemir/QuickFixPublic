@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/dist/styles.css" />

<div class="container">
    <div class="text-center mt-5">
        <h1 class="display-4">Welcome to Your Fix Dashboard</h1>
        <p class="lead">Here are your fixes:</p>
    </div>
    <div id="react-app" data-author="@User.Claims.FirstOrDefault(claim => claim.Type == "name").Value"></div>
</div>

@section Scripts {
    <script src="~/dist/bundle.js"></script>
}
