@page
@model DisplayFixModel
@{
    ViewData["Title"] = "Display Fix";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h1 class="card-title text-center">Display Fix</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="FixDto.Category" class="bold-label"></label>
                    <input asp-for="FixDto.Category" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FixDto.Author" class="bold-label"></label>
                    <input asp-for="FixDto.Author" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FixDto.Title" class="bold-label"></label>
                    <input asp-for="FixDto.Title" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="FixDto.Solution" class="bold-label"></label>
                    <textarea asp-for="FixDto.Solution" class="form-control" rows="5" readonly></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="FixDto.Tags" class="bold-label"></label>
                    <ul class="list-group">
                        @foreach (var str in Model.FixDto.Tags)
                        {
                            <li class="list-group-item">@str</li>
                        }
                    </ul>
                </div>
                <div class="form-group">
                    <label asp-for="FixDto.CreateDate" class="bold-label"></label>
                    <input asp-for="FixDto.CreateDate" class="form-control" readonly />
                </div>
            </form>
        </div>
    </div>
</div>
